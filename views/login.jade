extends layout

block content
  br
  .rowl.container
      h4.white-text.center-align USER LOGIN

      if (error)
        .row
          .col.s12.m12.l12
            h6#alert.white-text.center-align= error

      form(method='post', action='/auth/login')
        br
        .row.override
          .input-field.white-text
            input#username.validate.white-text(type='text', name= 'studentNo', required)
            label(for='email') Username

          .input-field.white-text
            input#password.validate(type='password', name= 'password', required)
            label(for='password') Password
        br 
        .row.center
          button.btn.waves-effect.waves-light(type='submit', name='action')
            | Login
            i.fa.fa-sign-in.right.small

        .row
          p.center.white-text
              | Don't have account? Click 
              b
                a.blue-text.link(href= '/auth/signup') Sign-Up     
