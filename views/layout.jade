doctype html
html
  head
    title= title

    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    // Import Google Icon Font
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')

    // Import Font Awesome Icons
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')

    //Import Google Font - Ubuntu
    link(href='https://fonts.googleapis.com/css?family=Ubuntu|Ubuntu+Mono' rel='stylesheet')

    // Compiled and minified CSS
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    //link(rel= 'stylesheet', type= 'text/css', href= '../../stylesheets/locker.css')
    link(rel= 'icon', type= 'image/ico', href= '../../images/locker_icon.ico')
    link(rel= 'icon', type= 'image/png', href= '../../images/Picture3.png')
    link(rel= 'icon', type= 'image/png', href= '../../images/pic.png')





  body

    ul.dropdown-content#dropdown1.black
      li
        a.onHover(href="/profile") View Profile
      li
        a.onHover(href="/auth/logout") Logout

    nav.black
      .nav-wrapper
        a.brand-logo.left.hide-on-small-only(href='/')
          img(src= '../../images/Picture3.png')
        a.brand-logo.center.hide-on-med-and-up(href='/')
          img(src= '../../images/pic.png')

        a.button-collapse(href='#', data-activates='mobile-demo')
          i.fa.fa-bars.small
        ul#nav-mobile.left.hide-on-med-and-down.right
          li
            a.onHover(href='/')
              i.fa.fa-home.left.small
              | Home
          li
            a.onHover(href='/Contact') Contact Us

          if (user)
            li
              a.dropdown-button.onHover(data-activates="dropdown1")
                i.fa.fa-caret-down.tiny.right
                | #{user.name}

          else
            li
              a.onHover(href='/auth/login') Login

        ul#mobile-demo.side-nav.black
          li
            a.orange-text.waves-effect.waves-white(href='/')
              i.fa.fa-home.left.small.orange-text
              | Home
          li
            a.orange-text.waves-effect.waves-white(href='/Contact')
              | ContactUs
          
          if (user)
            
            li
              a.orange-text.waves-effect.waves-white(href='/userprofile')
                | Profile
            li
              a.orange-text.waves-effect.waves-white(href='/auth/logout')
                i.fa.fa-sign-out.left.small.orange-text
                | Logout
          else
            li
              a.orange-text.waves-effect.waves-white(href='auth/login')
                | Login
    
