doctype html
html
  head
    title= title

    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    // Import Google Icon Font
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')

    // Import Font Awesome Icons
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')

    //Import Google Font - Ubuntu
    link(href='https://fonts.googleapis.com/css?family=Ubuntu|Ubuntu+Mono' rel='stylesheet')

    // Compiled and minified CSS
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css')

    link(rel='stylesheet', href='/stylesheets/style.css')
    //link(rel= 'stylesheet', type= 'text/css', href= '../../stylesheets/Login.css')  
    //link(rel= 'stylesheet', type= 'text/css', href= '../../stylesheets/signup.css')
    //link(rel= 'stylesheet', type= 'text/css', href= '../../stylesheets/Contact.css')
    link(rel= 'stylesheet', type= 'text/css', href= '../../stylesheets/Homepage.css')
    //link(rel= 'stylesheet', type= 'text/css', href= '../../stylesheets/locker.css')
    //link(rel= 'stylesheet', type= 'text/css', href= '../../stylesheets/userprofile.css')
    link(rel= 'icon', type= 'image/ico', href= '../../images/locker_icon.ico')

  body
    nav
      .nav-wrapper
        a.brand-logo.left.hide-on-small-only(href='/')
          //img(src= '../../images/locker_icon.ico')
        a.brand-logo.center.hide-on-med-and-up(href='/')
          //img(src= '../../images/logo.png')

        a.button-collapse(href='#', data-activates='mobile-demo')
          i.fa.fa-bars.small
        ul#nav-mobile.left.hide-on-med-and-down.right
          li
            a.onHover(href='/')
              i.fa.fa-home.left.small
              | Home
          li
            a.onHover(href='/Contact') ContactUs
          li
            a.onHover(href='/userprofile') Profile
          li
            a.onHover(href='/login') Login

          if (user)
            li
              a.onHover(href='/auth/logout') Logout

        ul#mobile-demo.side-nav.black
          li
            a.orange-text.waves-effect.waves-white(href='/')
              i.fa.fa-home.left.small.orange-text
              | Home
          li
            a.orange-text.waves-effect.waves-white(href='/Contact')
              i.fa.fa-search.left.small.orange-text
              | ContactUs
          li
            a.orange-text.waves-effect.waves-white(href='/userprofile')
              i.fa.fa-plus-square-o.left.small.orange-text
              | Profile
          li
            a.orange-text.waves-effect.waves-white(href='/login')
              i.fa.fa-plus-square-o.left.small.orange-text
              | Login
          if (user)
            li
              a.orange-text.waves-effect.waves-white(href='/auth/logout')
                i.fa.fa-sign-out.left.small.orange-text
                | Logout
    
    block content
    
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js')
    script(type='text/javascript', src='../../javascripts/script.js')
