extends layout

block content
  br
  .container.rown.col-4.col-m-9
      h4 SIGNUP
      form(method= 'POST', action= '/auth/signup')
        if (status)
            h6.white-text.red(style= "padding: 1%")= status
        .rows
          .input-field.white-text
                input#studentnumber.validate(type='text', name= 'studentnumber', value= studentnumber, required)
                label(for='studentnumber') Student Number
          .input-field.white-text
                input#full_name.validate(type='text', name= 'fullName', value= fullName)
                label(for='full_name') Full Name
          .input-field.white-text
                input#year_section.validate(type='text', name= 'yearSection', value= yearSection)
                label(for='year_section') Year & Section
          .input-field.white-text
                input#contact_number.validate(type='text', name= 'contactNumber', value= contactNumber)
                label(for='contact_number') Contact Number               
          .input-field.white-text
                input#email.validate(type='email', name= 'email', value= email, required)
                label(for='email', data-error='Invalid Email') Email
          .input-field.white-text
                input#password.validate(type='password', name= 'password', value= password, required)
                label(for='password') Password
          .input-field.white-text
                input#confirmpassword.validate(type='password', name= 'confirmpassword', value= confirmpassword, required)
                label(for='confirmpassword') Confirm Password      
        .row.center
            button.btn.waves-effect.waves-light(type='submit', name='action')
              | Register
              i.fa.fa-send.small.left
        .row
            p.white-text.center
                | Already have account? Click 
                b
                  a.blue-text.link(href= '/login') Login